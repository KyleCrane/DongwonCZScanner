<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="table_view_default_selected_background_color">#fada65</color>
    <color name="table_view_default_separator_color">#E7E7E7</color>
    <color name="table_view_default_shadow_background_color">#f2f2f2</color>
    <color name="table_view_default_unselected_background_color">#ffffff</color>
    <dimen name="default_column_header_height">55dp</dimen>
    <dimen name="default_row_header_width">55dp</dimen>
    <item name="CellRecyclerView" type="id"/>
    <item name="ColumnHeaderRecyclerView" type="id"/>
    <item name="RowHeaderRecyclerView" type="id"/>
    <integer name="default_item_cache_size">10</integer>
    <declare-styleable name="TableView">
        <attr format="dimension" name="row_header_width"/>
        <attr format="dimension" name="column_header_height"/>
        <attr format="color" name="selected_color"/>
        <attr format="color" name="unselected_color"/>
        <attr format="color" name="shadow_color"/>
        <attr format="color" name="separator_color"/>
        <attr format="boolean" name="show_vertical_separator"/>
        <attr format="boolean" name="show_horizontal_separator"/>
        <attr format="boolean" name="allow_click_inside_cell"/>
        <attr format="boolean" name="allow_click_inside_row_header"/>
        <attr format="boolean" name="allow_click_inside_column_header"/>
        <attr name="corner_view_location">
            <enum name="top_left" value="0"/>
            <enum name="top_right" value="1"/>
            <enum name="bottom_left" value="2"/>
            <enum name="bottom_right" value="3"/>
        </attr>
        <attr format="boolean" name="reverse_layout"/>
    </declare-styleable>
</resources>